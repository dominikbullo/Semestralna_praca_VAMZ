<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_thumbnail_video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="16:9" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_video_title"/>
    <TextView
            android:text="Video Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_video_title"
            app:layout_constraintTop_toBottomOf="@+id/imageView_thumbnail_video"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_chanel_profile" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/textView_channel_name"
            android:layout_marginBottom="8dp" android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="Chanel Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_channel_name"
            app:layout_constraintTop_toBottomOf="@+id/textView_video_title"
            app:layout_constraintStart_toStartOf="@+id/textView_video_title"
            app:layout_constraintEnd_toEndOf="@+id/textView_video_title"
            app:layout_constraintBottom_toBottomOf="parent" android:paddingBottom="16dp"
            android:layout_marginBottom="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_chanel_profile" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_thumbnail_video"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_video_title" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>
